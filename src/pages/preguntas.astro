<MainLayout title="Studio Models | Preguntas Frecuentes">
  <section class="bienvenidosPrincipal Preguntas">
    <section class="textoPrincipal">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="contenidoTexto">
              <div class="textoH1"><h1>Preguntas</h1></div>
              <div class="textoH6">
                <h6>
                  Si la respuesta que busca no se encuentra aquí, estaremos
                  disponibles para resolver todas sus inquietudes
                </h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="flechaBajar Index text-center">
      <a class="flcBajar" href="#preguntasPrincipal">
        <img src="/images/icon/iconScroll.svg" alt="icon scroll" />
      </a>
    </section>
    <section class="imgP"></section>
  </section>

  <main class="preguntasPrincipal" id="preguntasPrincipal">
    <div class="container">
      <div class="row">
        <h2 class="text-center animado">Preguntas Frecuentes</h2>
        <article class="col-12">
          {
            faqs.map((faq) => (
              <details class="pregunta-item">
                <summary class="pregunta animado">
                  <h5>{faq.question}</h5>
                </summary>
                <div class="respuesta">
                  <p>{faq.answer}</p>
                </div>
              </details>
            ))
          }
        </article>
      </div>
    </div>
  </main>
</MainLayout>

