<style>
  .bienvenidosPrincipal.Preguntas {
    position: relative;
    overflow: hidden;
  }
  .bienvenidosPrincipal.Preguntas .imgP {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-image: url(/images/backgrounds/hero_preguntas.jpg);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    -webkit-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
  }
  .bienvenidosPrincipal.Preguntas .imgP.blurImg {
    filter: blur(4px);
  }
  .bienvenidosPrincipal.Preguntas .imgP.blurImg:after {
    opacity: 1;
  }
  .bienvenidosPrincipal.Preguntas .imgP:after {
    content: "";
    position: absolute;
    display: block;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    background-color: rgba(56, 26, 63, 0.3);
    -webkit-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
  }
  .bienvenidosPrincipal.Preguntas .textoPrincipal h1,
  .bienvenidosPrincipal.Preguntas .textoPrincipal h6 {
    text-align: center;
  }
  .preguntasPrincipal {
    border-top: 2px solid #47254f;
    padding-top: 3rem;
    padding-bottom: 4rem;
    background: #1c2033 !important;
  }
  .preguntasPrincipal h2 {
    font-weight: 300;
    font-variant: small-caps;
    font-size: 2.3rem;
    width: 100%;
    background-image: linear-gradient(
      to right,
      #cb9f3d,
      #fffc9e,
      #c9ae2d,
      #e7d074,
      #d5b150,
      #dfc793,
      #c8953e
    );
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    position: relative;
  }
  .preguntasPrincipal h2:before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 10%;
    width: 80%;
    height: 2px;
    opacity: 0;
    -webkit-transition: opacity 0.6s 0.3s ease;
    -o-transition: opacity 0.6s 0.3s ease;
    transition: opacity 0.6s 0.3s ease;
    background-image: -webkit-gradient(
      linear,
      left top,
      right top,
      from(#cb9f3d),
      color-stop(#fffc9e),
      color-stop(#c9ae2d),
      color-stop(#e7d074),
      color-stop(#d5b150),
      color-stop(#dfc793),
      to(#c8953e)
    );
    background-image: -webkit-linear-gradient(
      left,
      #cb9f3d,
      #fffc9e,
      #c9ae2d,
      #e7d074,
      #d5b150,
      #dfc793,
      #c8953e
    );
    background-image: -o-linear-gradient(
      left,
      #cb9f3d,
      #fffc9e,
      #c9ae2d,
      #e7d074,
      #d5b150,
      #dfc793,
      #c8953e
    );
    background-image: linear-gradient(
      to right,
      #cb9f3d,
      #fffc9e,
      #c9ae2d,
      #e7d074,
      #d5b150,
      #dfc793,
      #c8953e
    );
  }
  .preguntasPrincipal h2.animacionS:before {
    opacity: 1;
  }
  .preguntasPrincipal section {
    -webkit-box-shadow: 4px 4px 2px 0 rgba(0, 0, 0, 0.5);
    box-shadow: 4px 4px 2px 0 rgba(0, 0, 0, 0.5);
  }
  .preguntasPrincipal .pregunta {
    cursor: pointer;
    background-color: #47254f;
    border-radius: 12px 12px 0 0;
    padding: .8rem .5rem;
    margin-top: 1rem;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    display: block;
    transition: opacity 0.6s 0.6s ease;
  }
  .preguntasPrincipal .pregunta.animacionS {
    opacity: 1;
  }
  .preguntasPrincipal .pregunta h5 {
    font-size: 1rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 0;
    color: white;
  }
  .preguntasPrincipal .respuesta {
    padding: .5rem 1rem;
    margin-left: auto;
    margin-right: auto;
    background-color: #47254f;
    border-top: 3px solid #0d0e19;
    border-radius: 0 0 12px 12px;
  }
  .preguntasPrincipal .respuesta p {
    text-align: justify;
    font-weight: 100;
    margin-bottom: 0;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }
  @media (min-width: 576px) {
    .preguntasPrincipal h2 {
      margin-bottom: 1.5rem;
    }
  }
  @media (min-width: 768px) {
    .bienvenidosPrincipal.Preguntas .textoPrincipal {
      width: 50%;
      margin-right: auto;
    }
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto .textoH1 {
      position: relative;
      overflow: hidden;
      margin-top: 9rem;
      height: 63px;
    }
    .bienvenidosPrincipal.Preguntas
      .textoPrincipal
      .contenidoTexto
      .textoH1
      h1 {
      margin-top: 0;
      bottom: 0;
      left: 0;
    }
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto .textoH6 {
      position: relative;
      overflow: hidden;
      height: 130px;
    }
    .bienvenidosPrincipal.Preguntas
      .textoPrincipal
      .contenidoTexto
      .textoH6
      h6 {
      top: 0;
      left: 0;
    }
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto h1,
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto h6 {
      text-align: left;
      -webkit-transition: all 0.6s 0.5s cubic-bezier(0.4, 0.7, 0.42, 0.62);
      -o-transition: all 0.6s 0.5s cubic-bezier(0.4, 0.7, 0.42, 0.62);
      transition: all 0.6s 0.5s cubic-bezier(0.4, 0.7, 0.42, 0.62);
    }
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto h6 {
      width: 100%;
    }
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto.loaded h1 {
      bottom: 0;
    }
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto.loaded h6 {
      top: 0;
    }
    .preguntasPrincipal {
      background: -webkit-gradient(
        linear,
        left top,
        right top,
        from(#1c2033),
        to(#0d0e19)
      );
      background: -webkit-linear-gradient(left, #1c2033, #0d0e19);
      background: -o-linear-gradient(left, #1c2033, #0d0e19);
      background: linear-gradient(to right, #1c2033, #0d0e19);
      background-size: cover;
      background-repeat: no-repeat;
    }
    .preguntasPrincipal h2 {
      font-size: 2.8rem;
      margin-bottom: 0.5rem;
    }
    .preguntasPrincipal h2:before {
      width: 60%;
      left: 20%;
    }
    .preguntasPrincipal .pregunta {
      margin-top: 1.5rem;
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
    .preguntasPrincipal .pregunta h5 {
      font-size: 1.2rem;
    }
    .preguntasPrincipal .respuesta {
      padding-left: 1rem;
      padding-right: 1rem;
      border-top-width: 4px;
      border-top-color: #1b1f31;
    }
    .preguntasPrincipal .respuesta p {
      font-size: 1.1rem;
    }
  }
  @media (min-width: 992px) {
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto .textoH1 {
      height: 80px;
    }
    .bienvenidosPrincipal.Preguntas
      .textoPrincipal
      .contenidoTexto
      .textoH6
      h6 {
      top: 0;
    }
    .preguntasPrincipal h2 {
      font-size: 3rem;
      font-weight: 400;
    }
    .preguntasPrincipal .pregunta h5 {
      font-size: 1.3rem;
    }
    .preguntasPrincipal .respuesta {
      border-top-color: #15172b;
    }
  }
  @media (min-width: 1200px) {
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto.loaded h1 {
      height: 72px;
    }
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto.loaded h6 {
      height: 90px;
    }
  }
  @media (min-width: 1600px) {
    .bienvenidosPrincipal.Preguntas .textoPrincipal .contenidoTexto h6 {
      width: 85%;
      margin-left: 0;
    }
  }
</style>